<body>
  <section class="emty_cart_area pt_100">
    <div class="container">
      <div class="emty_cart_inner">
        <i class="icon-user icons"></i>
        <h3>
          <%= user.fullname %>
        </h3>
      </div>
    </div>
  </section>


  <section class="register_area p_80">
    <div class="container">
      <div class="register_inner">
        <div class="row">
          <div class="col-lg-2"></div>
          <div class="col-lg-8">
            <div class="user_details">
              <form class="billing_inner row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <label for="name">Full Name </label>
                    <input type="text" class="form-control" id="name" aria-describedby="name"
                      value="<%= user.fullname %>" style="background-color: white;" disabled>
                  </div>

                </div>
                <div class="col-lg-12">
                  <div class="form-group">
                    <label for="name">Username </label>
                    <input type="text" class="form-control" id="name" aria-describedby="name"
                      value="<%= user.username %>" style="background-color: white;" disabled>
                  </div>
                </div>
                <div class="col-lg-12">
                  <div class="form-group">
                    <label for="name">Email </label>
                    <input type="text" class="form-control" id="name" aria-describedby="name" value="<%= user.email %>"
                      style="background-color: white;" disabled>
                  </div>
                </div>
                <div class="col-lg-12">
                  <div class="form-group">
                    <label for="name">Phone </label>
                    <input type="text" class="form-control" id="name" aria-describedby="name" value="<%= user.phone %>"
                      style="background-color: white;" disabled>
                  </div>
                </div>
                <div class="col-lg-12 pb_50">
                  <a href="" class="add_cart_btn">Edit Details</a>
                </div>
                <% if(address && address.Addressess.length>0 ){ %>
                  <div class="col-lg-12">
                    <label for="order">Saved Address</label>
                    <div class="form-group">
                      <% for( let i=0; i < address.Addressess.length; i++ ) { %>
                        <textarea class="form-control g-3" style="background-color: white;" id="order" rows="4"
                          disabled>
  Name: <%= address.Addressess[i].fullname   %> 
  Phone: <%= address.Addressess[i].phone   %> 
  State: <%= address.Addressess[i].state   %> 
  City: <%= address.Addressess[i].city   %> 
  Building Name: <%= address.Addressess[i].buildingName   %> 
  Area: <%= address.Addressess[i].area   %> 
  PIN: <%= address.Addressess[i].PIN   %> 
                        </textarea>
                        <div class="creat_account">
                          <a style="color: red; cursor: pointer;"
                            onclick="sayHello('<%= address.Addressess[i]._id %>')">
                            Delete this Address?
                          </a>
                        </div>
                        <% } %>
                    </div>
                    <a href=" /userprofile/add-address" class="add_cart_btn pb_80">Add Address</a>
                  </div>
                  <% } else { %>
                    <div class="col-lg-12">
                      <label for="name">You Don't have any saved address. Please Add an address </label>
                      <div class="form-group">
                        <textarea class="form-control" style="background-color: rgb(248, 186, 164);" id="order"
                          rows="4"></textarea>
                      </div>
                      <a href=" /userprofile/add-address" class="add_cart_btn">Add Address</a>
                    </div>
                    <% } %>
              </form>
              <form action="/logout?_method=DELETE" method="post" style="float: right; margin-top: 50px;">
                <button class="forgot_pass_btn" type="submit">Logout</button>
              </form>

            </div>
          </div>
        </div>
      </div>
  </section>
  <script src="/users/javascript/axios-profile.js"></script>
</body>