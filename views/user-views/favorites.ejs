<section class="solid_banner_area">
  <div class="container">
    <div class="solid_banner_inner">
      <h3>Favorites</h3>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="">Favorites</a></li>
      </ul>
    </div>
  </div>
</section>

<section class="shopping_cart_area p_100">
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <div class="cart_items">
          <h3 style="text-align: center;">Your Favorite Items</h3>
          <div class="table-responsive-md">
            <table class="table">
              <tbody>
                <tr>
                  <th></th>
                  <th>Product</th>
                  <th>Price</th>
                  <th></th>
                </tr>
                <% for( let i=0; i < products.length; i++ ) { %>
                  <tr>
                    <th scope="row">
                      <img src="users/images/icon/close-icon.png" onclick="deleteButton('<%= products[i]._id %>')"
                        alt="" style="cursor: pointer;">
                    </th>
                    <td>
                      <div class="media">
                        <div class="d-flex">
                          <a href="/shop/product?id=<%= products[i]._id %>">
                            <img src="products-images/<%= products[i].images[0] %>"
                              style="max-width:102px ; max-height:123px ;">
                          </a>
                        </div>
                        <div class="media-body">
                          <h4 style="overflow: hidden;
                          white-space: nowrap;
                          text-overflow: ellipsis; max-width:20em;">
                            <%= products[i].title %>
                          </h4>
                        </div>
                      </div>
                    </td>
                    <td>
                      <p class="red">â‚¹ <%= products[i].price %>
                      </p>
                    </td>
                    <td>
                      <div class="media-body">
                        <button class="add_cart_btn" onclick="addToCart('<%= products[i]._id %>')"
                          style="cursor: pointer;">Add To Cart</button>
                      </div>
                    </td>
                  </tr>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/users/javascript/axios-favorites.js"></script>
</section>