<body>
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen}">
        <%- include('../admin-views/partials/side-bar.ejs') %>
            <div class="flex flex-col flex-1 w-full">
                <%- include('../admin-views/partials/header.ejs') %>
                    <main class="h-full pb-16 overflow-y-auto">
                        <div class="container grid px-6 mx-auto">
                            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                                <%= product.title %>
                            </h2>
                            <div class="max-w-8xl px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
                                <p class="mb-4 mt-4 text-gray-600 dark:text-gray-400">
                                    ID:<strong>
                                        <%= product._id %>
                                    </strong>
                                </p>
                                <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                <p class="mb-4 text-gray-600 dark:text-gray-400">
                                    Description:<strong>
                                        <%= product.description %>
                                    </strong>
                                </p>
                                <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                <p class="mb-4 text-gray-600 dark:text-gray-400">
                                    Price:<strong>
                                        <%= product.price %>
                                    </strong>
                                </p>
                                <p class="mb-4 text-gray-600 dark:text-gray-400">
                                    Category:<strong>
                                        <%= product.category.name %>
                                    </strong>
                                </p>
                                <p class="mb-4 text-gray-600 dark:text-gray-400">
                                    Size:<strong>
                                        <%= product.size %>
                                    </strong>
                                </p>
                                <p class="mb-4 text-gray-600 dark:text-gray-400">
                                    createdAt:<strong>
                                        <%= product.createdAt %>
                                    </strong>
                                </p>
                                <p class="mb-4 text-gray-600 dark:text-gray-400">
                                    updatedAt:<strong>
                                        <%= product.updatedAt %>
                                    </strong>
                                </p>
                            </div>
                        </div>
                        <div class="container grid px-6 mx-auto">
                            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                                Images
                            </h2>
                            <div class="grid gap-6 mb-8 md:grid-cols-2">
                                <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-900">
                                    <img src="/products-images/<%= product.images[0] %> " alt="">
                                </div>
                                <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-900">
                                    <img src="/products-images/<%= product.images[1] %> " alt="">
                                </div>
                                <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-900">
                                    <img src="/products-images/<%= product.images[2] %> " alt="">
                                </div>
                                <div class="min-w-0 p-4 bg-white rounded-lg shadow-xs dark:bg-gray-900">
                                    <img src="/products-images/<%= product.images[3] %> " alt="">
                                </div>
                            </div>

                        </div>
            </div>
            </main>
    </div>
    </div>
</body>