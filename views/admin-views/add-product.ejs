<body>
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen}">
        <%- include('../admin-views/partials/side-bar.ejs') %>
            <div class="flex flex-col flex-1 w-full">
                <%- include('../admin-views/partials/header.ejs') %>
                    <main class="h-full pb-16 overflow-y-auto">
                        <!-- Remove everything INSIDE this div to a really blank page -->
                        <div class="container px-6 mx-auto grid">
                            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                                Add Products
                            </h2>
                            <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
                                <form method="post" action="/admin/dash/add-product" enctype="multipart/form-data">
                                    <!-- Helper text -->
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Title
                                        </span>
                                        <input
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input"
                                            placeholder="Title" name="title" type="text" />
                                    </label>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Prize
                                        </span>
                                        <input
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input"
                                            placeholder="Price" name="price" type="number" />
                                    </label>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Category
                                        </span>
                                        <% if (category) { %>
                                            <select
                                                class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray"
                                                name="category">
                                                <% for(i=0;i<category.length;i++){ %>
                                                    <option value="<%= category[i]._id %>">
                                                        <%= category[i].name %>
                                                    </option>
                                                    <% } %>
                                            </select>
                                            <% } else { %>
                                                <select
                                                    class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray"
                                                    name="category">
                                                </select>
                                                <% } %>
                                    </label>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">Description</span>
                                        <textarea
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-textarea focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray"
                                            rows="3" placeholder="Description" id="description"
                                            name="description"></textarea>
                                    </label>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Size
                                        </span>
                                        <select
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray"
                                            name="size">
                                            <option>small</option>
                                            <option>medium</option>
                                            <option>large</option>
                                        </select>
                                    </label>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Stock
                                        </span>
                                        <input
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input"
                                            placeholder="Stock" name="stock" type="number" />
                                    </label>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Add Image 1
                                        </span>
                                        <input
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input"
                                            placeholder="Price" id="input-image0" name="image0" type="file" single />
                                    </label>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <div id="image0" class="image-container"></div>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <a style="display: none;"
                                        class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                        id="btnCrop0">
                                        Crop
                                    </a>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Add Image 2
                                        </span>
                                        <input
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input"
                                            placeholder="Price" id="input-image1" name="image1" type="file" single />
                                    </label>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <div id="image1" class="image-container"></div>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <a style="display: none;"
                                        class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                        id="btnCrop1">
                                        Crop
                                    </a>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Add Image 3
                                        </span>
                                        <input
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input"
                                            placeholder="Price" id="input-image2" name="image2" type="file" single />
                                    </label>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <div id="image2" class="image-container"></div>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <a style="display: none;"
                                        class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                        id="btnCrop2">
                                        Crop
                                    </a>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <label class="block mt-4 text-sm">
                                        <span class="text-gray-700 dark:text-gray-400">
                                            Add Image 4
                                        </span>
                                        <input
                                            class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input"
                                            placeholder="Price" id="input-image3" name="image3" type="file" single />
                                    </label>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <div id="image3" class="image-container"></div>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <a style="display: none;"
                                        class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                        id="btnCrop3">
                                        Crop
                                    </a>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"></h2>
                                    <button
                                        class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                                        type="submit">
                                        Submit
                                    </button>
                                </form>
                            </div>
                        </div>
                    </main>
            </div>
    </div>
    <script src="/admin/js/user-scripts/add-products.js"></script>
</body>